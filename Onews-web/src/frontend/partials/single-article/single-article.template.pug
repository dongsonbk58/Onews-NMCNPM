.content-left.single-post
  ol.breadcrumb
    li
      a(href='{{article.url}}') Home
    li.active Single Page

  .blog-posts
    h3.post
      | {{article.title}}
    .blog-image
      a(ui-sref=".article({id: article.id})")
        img(src='{{article.img}}', alt='')
    .last-article(ng-repeat="part in article.content")
      p.artext
        | {{part}}

    ul.categories
      li(ng-repeat="category in categories")
        a(href='#') {{category.name}}

    .clearfix
    // related-posts    
    related-articles(category='category')
    // //related-posts
    responses(article='article.id')

        
