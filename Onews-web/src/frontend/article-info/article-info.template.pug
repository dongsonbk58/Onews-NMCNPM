.article
  .article-left
    a(ui-sref=".article({id: ctrl.article.id})", scroll-to="")
      img(src="{{ctrl.article.img}}")
  .article-right
    .article-title
      p
        | {{ctrl.article.created_time}}
        a.span_link(href="#")
          span.glyphicon.glyphicon-comment
          | 0
        a.span_link(href="#")
          span.glyphicon.glyphicon-eye-open
          | 104
        a.span_link(href="#")
          span.glyphicon.glyphicon-thumbs-up
          | 52
      a.title(ui-sref=".article({id: ctrl.article.id})", scroll-to="")  {{ctrl.article.title}}
    .article-text
      p
        | {{ctrl.article.content[0]}}
      a(ui-sref=".article({id: ctrl.article.id})", scroll-to="")
        img(src="images/more.png", alt="")
      .clearfix
  .clearfix